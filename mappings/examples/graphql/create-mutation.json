{
    "request": {
        "url": "/graphql",
        "method": "POST",
        "headers": {
            "Content-Type": {
                "equalTo": "application/json"
            }
        },
        "bodyPatterns": [
            {
                "matchesJsonPath": "$[?(@.query =~ /mutation.*createWishlist.*/i)]"
            },
            {
                "matchesJsonPath": "$.variables.input.name"
            }
        ]
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": "application/json"
        },
        "jsonBody": {
            "data": {
                "createWishlist": {
                    "uuid": "{{randomValue length=36 type='UUID'}}",
                    "userUuid": "123e4567-e89b-12d3-a456-426614174001",
                    "name": "{{jsonPath request.body '$.variables.input.name'}}",
                    "items": "{{jsonPath request.body '$.variables.input.items'}}",
                    "createdAt": "{{now format='yyyy-MM-dd HH:mm:ss'}}"
                }
            }
        },
        "transformers": ["response-template"]
    }
}
